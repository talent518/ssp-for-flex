<?xml version="1.0" encoding="utf-8"?>
<s:MXTreeItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
					  xmlns:s="library://ns.adobe.com/flex/spark"
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  xmlns:component="com.fenxihui.library.component.*"
					  width="100%" height="25" autoDrawBackground="true"
					  dataChange="dataChangeHandler(event)" xmlns:component1="com.fenxihui.library.component.*">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			[Embed(source='assets/category.gif')]
			[Bindable]
			private var iconClass:Class;
			
			protected function dataChangeHandler(event:FlexEvent):void
			{
				icon.source=iconClass;
				if(data){
					title.text=data.@title;
					counts.text=data.@unreads.toString()+'/'+data.@counts.toString();
				}
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:HorizontalLayout verticalAlign="bottom"/>
	</s:layout>
	<mx:HBox width="100%" height="25" horizontalAlign="left" paddingLeft="5" paddingRight="5"
			 verticalAlign="middle" verticalGap="0">
		<s:Image id="icon" width="23" height="17" verticalCenter="0"/>
		<s:Label id="title" width="100%" maxDisplayedLines="1" showTruncationTip="true"
				 verticalCenter="0"/>
		<component1:LabelBorder id="counts" height="16" backgroundColor="0x666666" color="0xFFFFFF"
							  cornerRadius="8" paddingLeft="3" paddingRight="3" paddingTop="2"
							  text="dfasdf" textAlign="center" verticalAlign="middle"/>
	</mx:HBox>
</s:MXTreeItemRenderer>
