<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:component="com.fenxihui.library.component.*"
		 width="400" minWidth="400" height="300" creationComplete="creationComplete()" xmlns:component1="com.fenxihui.library.component.*">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		@namespace component "com.woofuu.library.component.*";
		.textArea{
			backgroundAlpha:0.0;
			borderStyle:none;
			fontSize:14px;
		}
		.label{
			paddingLeft:10px;
			color:#666666;
		}
		.summary{
			cornerRadius:5px;
			borderWidth:1px;
			borderStyle:solid;
			borderColor:#cccccc;
			backgroundColor:#efefef;
			paddingLeft:8;
			paddingRight:8;
			paddingTop:8;
			paddingBottom:8;
			left:8;
			right:8;
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import flash.net.navigateToURL;
			
			import mx.events.FlexEvent;
			
			private var _info:XMLList,_category:XMLList;
			
			public function get category():XMLList{
				return _category;
			}
			public function set category(value:XMLList):void{
				_category=value;
				lblCategory.text=lblTitle.text=value.@gname;
			}
			
			public function get info():XMLList{
				return _info;
			}
			public function set info(value:XMLList):void{
				_info=value;
				lblTitle.text=value.@title;
				lblAuthor.text=value.@author;
				lblDateline.text=value.@dateline;
				lblSummary.text=value.@summary.toString();
				if(lblSummary.text.length){
					lblSummary.includeInLayout=lblSummary.visible=true;
				}else{
					lblSummary.includeInLayout=lblSummary.visible=false;
				}
				txtContent.htmlText=value.text();
			}
			
			protected function creationComplete():void{
				txtContent.htmlLoader.navigateInSystemBrowser=true;
			}
		]]>
	</fx:Script>
	<mx:Text id="lblTitle" width="100%" fontSize="14" fontWeight="bold" paddingLeft="10"
			 paddingRight="10" text="标签" textAlign="center"/>
	<s:HGroup width="100%" height="25" gap="0" horizontalAlign="center" verticalAlign="middle">
		<s:Label text="所属栏目："/>
		<s:Label id="lblCategory" fontWeight="bold" text="category" color="#1670EB"/>
		<s:Label paddingLeft="10" text="发布者："/>
		<s:Label id="lblAuthor" fontWeight="bold" text="master"/>
		<s:Label paddingLeft="10" text="发布时间："/>
		<s:Label id="lblDateline" text="2011-8-15"/>
	</s:HGroup>
	<component1:LabelBorder id="lblSummary" x="0" y="0" width="100%" styleName="summary" text="标签"/>
	<mx:HTML id="txtContent" width="100%" height="100%" fontSize="12" styleName="textArea" htmlText="标签"
			 paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5"
			 borderColor="#cccccc" borderStyle="solid"/>
</mx:VBox>
