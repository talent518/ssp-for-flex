<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
						  xmlns:s="library://ns.adobe.com/flex/spark"
						  xmlns:mx="library://ns.adobe.com/flex/mx"
						  focusEnabled="true">
	<fx:Script>
		<![CDATA[
			import com.fenxihui.desktop.utils.RemoteProxy;
			import com.fenxihui.desktop.view.window.GoldViewWindow;
			import com.fenxihui.desktop.view.window.InvestViewWindow;
			
			import mx.events.FlexEvent;
			
			protected function view(iid:Number):void{
				btnView.enabled=false;
				RemoteProxy.bind('Invest.View.Succeed',function(request:XML):void{
					var viewWindow:InvestViewWindow=new InvestViewWindow;
					with(viewWindow){
						open(true);
						nativeWindow.activate();
						nativeWindow.restore();
						nativeWindow.orderToFront();
						center();
						data=XML(request.invest);
						stockList=XMLList(request.stock);
					}
					viewWindow.addEventListener(Event.CLOSE,function(e:Event):void{
						btnView.enabled=true;
					});
				});
				RemoteProxy.bind('Invest.View.Failed',function(request:XML):void{
					ShowDialog(request.text(),false,function():void{
						btnView.enabled=true;
					});
				});
				RemoteProxy.send('Invest.View',{iid:iid});
			}
		]]>
	</fx:Script>
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button id="btnView" width="60" label="查看" click="view(parseInt(data.@iid.toString()))"/>
	</mx:HBox>
</s:MXDataGridItemRenderer>
